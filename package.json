{
  "name": "px-to-vw-converter",
  "displayName": "px-to-vw-converter",
  "description": "vw 단위 기반 반응형 CSS 작성을 위한 px → vw 변환 도구입니다.",
  "version": "0.2.0",
  "publisher": "px-to-vw-converter",
  "license": "MIT",
  "homepage": "https://github.com/wnsdud12/px-to-vw-converter",
  "bugs": {
    "url": "https://github.com/wnsdud12/px-to-vw-converter/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wnsdud12/px-to-vw-converter.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Formatters",
    "Themes",
    "Snippets"
  ],
  "keywords": [
    "vscode",
    "extension",
    "px",
    "vw",
    "responsive",
    "converter",
    "viewport",
    "css",
    "scss"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "px-to-vw-converter.convert",
        "title": "Convert px to vw"
      },
      {
        "command": "px-to-vw-converter.reverseConvert",
        "title": "Convert vw to px"
      }
    ],
    "configuration": {
      "title": "PX to VW Converter",
      "properties": {
        "pxToVwConverter.decimalPlaces": {
          "type": "number",
          "default": 2,
          "description": "vw 단위 소수점 자리수 (예: 2 → 75.52vw)"
        },
        "pxToVwConverter.removeProps": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "display",
            "position",
            "z-index",
            "float",
            "clear",
            "contain",
            "resize",
            "isolation",
            "will-change",
            "visibility",
            "box-sizing",
            "overflow",
            "overflow-x",
            "overflow-y",
            "backface-visibility",
            "flex-direction",
            "flex-wrap",
            "justify-content",
            "justify-items",
            "justify-self",
            "align-items",
            "align-content",
            "align-self",
            "place-content",
            "place-items",
            "place-self",
            "grid-auto-flow",
            "text-align",
            "text-transform",
            "white-space",
            "word-break",
            "overflow-wrap",
            "hyphens",
            "direction",
            "writing-mode",
            "font-style",
            "font-variant",
            "font-weight",
            "font-family",
            "color",
            "background-blend-mode",
            "mix-blend-mode",
            "background-attachment",
            "background-clip",
            "background-origin",
            "background-repeat",
            "image-rendering",
            "pointer-events",
            "user-select",
            "touch-action",
            "cursor",
            "appearance",
            "content",
            "quotes",
            "text-decoration",
            "text-decoration-line",
            "text-decoration-style",
            "text-decoration-color",
            "text-rendering",
            "caption-side",
            "empty-cells",
            "list-style",
            "list-style-position",
            "list-style-type",
            "animation-name",
            "animation-play-state",
            "animation-direction",
            "animation-fill-mode",
            "transition-property",
            "transition-timing-function"
          ],
          "description": "media query 내 제거할 속성 목록"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "build": "esbuild src/extension.ts --bundle --platform=node --target=node18 --outfile=dist/extension.js --external:vscode",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
